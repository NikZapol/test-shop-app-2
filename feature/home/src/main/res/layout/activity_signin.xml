<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9FF">


    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="100sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text="Sign in"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/black"
        android:textSize="26sp" />


    <EditText
        android:id="@+id/firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin"
        android:layout_marginStart="25sp"
        android:layout_marginTop="75sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="25sp"
        android:background="@drawable/round_back_color4_15"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        android:textColor="#7B7B7B"
        android:textColorHint="#7B7B7B"
        android:padding="5sp"

        android:hint="First name"
/>

    <EditText
        android:id="@+id/lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstname"
        android:layout_marginStart="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="25sp"
        android:background="@drawable/round_back_color4_15"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        android:textColor="#7B7B7B"
        android:textColorHint="#7B7B7B"
        android:padding="5sp"
        android:hint="Last name"
 />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lastname"
        android:layout_marginStart="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="25sp"
        android:background="@drawable/round_back_color4_15"
        android:textAlignment="center"
        android:textColor="#7B7B7B"
        android:textColorHint="#7B7B7B"
        android:padding="5sp"
        android:hint="Email"
        android:fontFamily="@font/montserrat_regular"
/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="25sp"
        android:background="@drawable/round_back_color4_15"
        android:fontFamily="@font/montserrat_regular"
        android:textAlignment="center"
        android:textColor="#7B7B7B"
        android:textColorHint="#7B7B7B"
        android:padding="5sp"
        android:hint="Password"
        android:drawableEnd="@drawable/eyecrossed"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerbtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp"
        android:textColor="@color/white"
        android:background="@drawable/round_back_color3_100"
        android:fontFamily="@font/montserrat_bold"
        android:text="Sign in"
        android:textAllCaps="false"
        />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerbtn"
        android:layout_centerHorizontal="true"
        android:text="Log in"
        android:textColor="#254FE6"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="11sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerbtn"
        android:layout_toStartOf="@id/login"
        android:text="Already have an account?"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:textColor="#808080"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="10sp"
        />

    <LinearLayout
        android:id="@+id/signingooglelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:id="@+id/googleimg"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginEnd="15sp"
            android:src="@drawable/google_vector" />

        <TextView
            android:id="@+id/signingoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Google"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signinapplelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signingooglelayout"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:id="@+id/appleimg"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_marginEnd="15sp"
            android:src="@drawable/apple_vector" />

        <TextView
            android:id="@+id/signinapple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in with Apple"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>




    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_centerInParent="true"/>





</RelativeLayout>