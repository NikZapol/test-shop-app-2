<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF9FF"
        tools:context="com.example.loginregister.LoginActivity">


        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="100sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp"
            android:gravity="center"
            android:text="Welcome back"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:textSize="26sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome"
            android:layout_marginStart="25sp"
            android:layout_marginTop="75sp"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="25sp"
            android:background="@drawable/round_back_color4_15"
            android:textAlignment="center"
            android:textColor="#7B7B7B"
            android:textColorHint="#7B7B7B"
            android:padding="5sp"
            android:fontFamily="@font/montserrat_regular"

            android:hint="Email"
            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginStart="25sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="25sp"
            android:background="@drawable/round_back_color4_15"
            android:textAlignment="center"
            android:textColor="#7B7B7B"
            android:textColorHint="#7B7B7B"
            android:padding="5sp"
            android:hint="Password"
            android:fontFamily="@font/montserrat_regular"
            android:drawableEnd="@drawable/eyecrossed"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25sp"
            android:layout_marginTop="75sp"
            android:layout_marginEnd="25sp"
            android:layout_marginBottom="10sp"
            android:textColor="@color/white"
            android:background="@drawable/round_back_color3_100"
            android:fontFamily="@font/montserrat_bold"
            android:text="Login"
            android:textAllCaps="false"
            />






        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_centerInParent="true"/>





    </RelativeLayout>
</layout>
